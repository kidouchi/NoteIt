<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/photo_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/photo_item_bitmap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_cardview"
            tools:src="@drawable/test_image"
            android:elevation="10dp"
            android:scaleType="fitXY" />

    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo_delete_button"
        android:src="@drawable/ic_delete_white_24dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@+id/photo_card"
        android:layout_alignEnd="@+id/photo_card"
        android:layout_gravity="right"
        android:padding="10dp"
        android:elevation="9dp"
        android:background="@drawable/pink_circle_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/photo_twitter_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter_logo"
            android:padding="5dp"
            android:background="@drawable/blue_circle_button" />

        <ImageButton
            android:id="@+id/photo_tumblr_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tumblr_logo_white_512"
            android:padding="5dp"
            android:background="@drawable/dark_blue_circle_button" />

        <ImageButton
            android:id="@+id/photo_google_plus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_google_plus_white"
            android:padding="6dp"
            android:background="@drawable/red_circle_button" />

        <ImageButton
            android:id="@+id/photo_share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_share_white_24dp"
            android:padding="5dp"
            android:background="@drawable/green_circle_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


</RelativeLayout>