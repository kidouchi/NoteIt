<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/note_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/note_item_bitmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            tools:src="@drawable/test_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/note_item_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_black"
                android:padding="6dp"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="TEST TITLE" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/note_delete_button"
        android:src="@drawable/ic_delete_white_24dp"
        android:padding="5dp"
        android:elevation="9dp"
        android:background="@drawable/pink_circle_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/note_twitter_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter_logo"
            android:padding="5dp"
            android:background="@drawable/blue_circle_button" />

        <ImageButton
            android:id="@+id/note_tumblr_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tumblr_logo_white_512"
            android:padding="5dp"
            android:background="@drawable/dark_blue_circle_button" />

        <ImageButton
            android:id="@+id/note_google_plus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_google_plus_white"
            android:padding="6dp"
            android:background="@drawable/red_circle_button" />

        <ImageButton
            android:id="@+id/note_share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_share_white_24dp"
            android:padding="5dp"
            android:background="@drawable/green_circle_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</RelativeLayout>